#########
# Media #
#########

# Toggle mute
XF86AudioMute
    pulseaudio-ctl mute

# Toggle mic mute
XF86AudioMicMute
    pulseaudio-ctl mute-input

# Change volume
XF86Audio{Raise,Lower}Volume
    pulseaudio-ctl {up,down} 2

# Change volume
super + {k,j}
    pulseaudio-ctl {up,down} 2

# Change volume, chunky
super + shift + {k,j}
    pulseaudio-ctl {up,down} 10

# Toggle mpd
super + 0
    mpc -q toggle

# Navigate mpd playlist
super + {comma, period}
    mpc -q {prev, next}

# Display current mpd track
super + slash
    notify-send -u low "$(mpc -f "%title%" current)" "by $(mpc -f "%artist%" current)\non $(mpc -f "%album%" current) (#$(mpc -f "%track%" current))"

# Play the video URL in the clipboard
super + m
    play

# Mute individualpulse audio streams
super + shift + m
    pamute


################
# Applications #
################

# Launch terminal
super + t
    $TERMINAL

# Launch web browser
super + w
    firefox -P default

# Launch web browser with work profile
super + shift + w
    firefox -P work

# Launch application launcher
super + space
    rofi -show run

# Launch window switcher
alt + Tab
    rofi -show window

# Launch password manager
super + p
    menu=$(echo -e "$HOME/.password-store\n$ALTPASSDIR" | rofi -dmenu); rofi-pass --root "${menu}"

# Bookmark via pinboard
super + d
    termite --title pinit -e ~/bin/pinit

# Launch rofi surfraw
super + shift + f
    surfraw-rofi

# Launch rofi surfraw
super + f
    surfraw duckduckgo -j $(xclip -o -selection clipboard)


########
# Misc #
########

# Lock the screen
super + l
    /usr/local/bin/lock

# Lock the screen
XF86ScreenSaver
    /usr/local/bin/lock

# Change screen brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# Take a screenshot
Print
    scrot 'screenshot_%Y-%m-%d-%H%M%S.png' -e 'mv $f ~/tmp'
super + s
    teiler

# Generate a QR code from the clipboard
super + q
    qcode

# Suspend (F12)
super + XF86Explorer
    systemctl suspend

# Vim anywhere
super + v
    $HOME/library/src/vim-anywhere/bin/run


#########
# Mouse #
#########

button9
    xte 'key Page_Up'

button8
    xte 'key Page_Down'
